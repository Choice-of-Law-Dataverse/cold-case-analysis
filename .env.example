# ============================================================================
# REQUIRED CONFIGURATION
# ============================================================================

# OpenAI Configuration (REQUIRED)
# Used by all analysis components (CLI, Streamlit, LangGraph)
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-5-nano"

# OpenAI API Connection Settings (OPTIONAL - For connection reliability)
# Timeout for API requests in seconds (default: 300)
# Increase if you have slow network or experience timeout errors
OPENAI_TIMEOUT="300"

# Maximum number of retries for failed API requests (default: 3)
# Increase to make the system more resilient to transient network issues
OPENAI_MAX_RETRIES="3"

# ============================================================================
# DATABASE CONFIGURATION (OPTIONAL - Required for data persistence)
# ============================================================================

# Primary Database Connection (used by Streamlit app for saving analysis results)
SQL_CONN_STRING="postgresql+psycopg2://username:password@host:port/database"

# PostgreSQL Configuration (used by Docker deployment for secrets.toml generation)
POSTGRESQL_DIALECT="postgresql"
POSTGRESQL_HOST="your_postgresql_host"
POSTGRESQL_PORT="5432"
POSTGRESQL_DATABASE="your_database_name"
POSTGRESQL_USERNAME="your_database_username"
POSTGRESQL_PASSWORD="your_database_password"

# Alternative PostgreSQL Connection String (legacy/backup)
SUGGESTIONS_SQL_CONN_STRING="postgresql://username:password@host:port/database?sslmode=require"

# ============================================================================
# EXTERNAL DATA SOURCES (OPTIONAL - For alternative data sources)
# ============================================================================

# Airtable Integration (optional alternative to local CSV data)
AIRTABLE_API_KEY="your_airtable_api_key"
AIRTABLE_BASE_ID="your_airtable_base_id"
AIRTABLE_CONCEPTS_TABLE="your_airtable_concepts_table_id"

# NocoDB Configuration (optional NoCode database interface)
NOCODB_BASE_URL="https://your-nocodb-instance/api/v1/db/data/noco/your_project_id"
NOCODB_API_TOKEN="your_nocodb_api_token"
NOCODB_POSTGRES_SCHEMA="your_postgres_schema_id"

# ============================================================================
# AUTHENTICATION & USER MANAGEMENT (OPTIONAL - For multi-user deployments)
# ============================================================================

# Streamlit User Authentication (JSON format)
# Format: {"username1":"password1","username2":"password2"}
USER_CREDENTIALS='{"admin":"admin_password","demo":"demo_password"}'

# ============================================================================
# LOGGING & DEBUGGING (OPTIONAL - For advanced logging configuration)
# ============================================================================
LOG_LEVEL="INFO"  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOGFIRE_TOKEN="your_logfire_token"
